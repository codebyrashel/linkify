{
  "name": "linkify",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend dev:tinybird",
    "dev:frontend": "next dev",
    "dev:backend": "convex dev",
    "dev:tinybird": "docker compose up -d tinybird-local",
    "predev": "convex dev --until-success && convex dashboard",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tinybird:start": "docker compose up -d tinybird-local",
    "tinybird:stop": "docker compose stop tinybird-local",
    "tinybird:down": "docker compose down tinybird-local",
    "tinybird:logs": "docker compose logs -f tinybird-local",
    "tinybird:status": "docker compose ps tinybird-local",
    "tinybird:deploy": "tb --local deploy"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.25.0",
    "@clerk/nextjs": "^6.12.6",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@vercel/functions": "^3.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.28.0",
    "lucide-react": "^0.553.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.66.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.0.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "npm-run-all2": "^5.0.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
